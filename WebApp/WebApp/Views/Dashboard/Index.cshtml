<script>
     $(document).ready(function () {
         var user_name = '@Session["UserName"]';
         var user_code = '@Session["LoginID"]';
         $('#txtusername').html(user_name);
         $('#txtuserid').html(user_code);
         check_user();
         function check_user() {
             var LoginData = {
                 user_name: '@Session["EmailID"]',
                 password: '@Session["Password"]',
             }
             $.ajax({
                 async: true,
                 type: 'POST',
                 url: '/Home/LoginVerification',
                 contentType: 'application/json; charset=UTF-8',
                 data: JSON.stringify(LoginData),
                 success: function (data) {
                     if (jQuery.isEmptyObject((data))) {
                         logout();
                     }
                     else {
                         var data = JSON.parse(data);
                         if (data != '') {
                             if (data["msg"] == "Success") {
                                 if (data["data"][0].msg == "1") {
                                 }
                                 else {
                                     logout();
                                 }
                             }
                             else {
                                 logout();
                             }
                         }
                         else {
                             logout();
                         }
                     }
                 }
             });
         }
         //logout the session
         $('#logout').click(function () {
             logout();
         });

         //logout function
         function logout() {
             $.ajax({
                 async: true,
                 type: 'POST',
                 url: '/Home/LogoutSession',
                 contentType: 'application/json; charset=UTF-8',
                 success: function (data) {
                     window.location = "/Home";
                 }
             });
         }
         $('#btnCpassword').click(function () {
             window.location = "/ChangePassword";
         });
     });
</script>

