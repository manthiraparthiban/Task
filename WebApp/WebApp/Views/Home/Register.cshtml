
@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<!-- Created By CodingLab - www.codinglabweb.com -->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/Content/css/styless.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="regpagecls">
        <div class="title">Register</div>
        <div class="input-box underline">
            <input type="text" placeholder="Enter Your First Name" id="fname" required>
            <div class="underline"></div>
            <p id="Pfname" style="color:red"></p>
        </div>
        <div class="input-box underline">
            <input type="text" placeholder="Enter Your Last Name" id="lname" required>
            <div class="underline"></div>
            <p id="Plname" style="color:red"></p>
        </div>
        <div class="input-box underline">
            <input type="text" placeholder="Enter Your Mail Id" id="emailid" required>
            <div class="underline"></div>
            <p id="Pemailid" style="color:red"></p>
        </div>
        <div class="input-box">
            <input type="password" placeholder="Enter Your Password" id="password" required>
            <div class="underline"></div>
            <p id="Ppassword" style="color:red"></p>
        </div>
        <div class="input-box">
            <input type="password" placeholder="Re Enter Your Password" id="repassword" required>
            <div class="underline"></div>
            <p id="Prepassword" style="color:red"></p>
        </div>
        <div class="input-box button">
            <input type="submit" name="" value="Register" id="btnregister">
        </div>
    </div>
</body>
</html>


