
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<!-- Designined by CodingLab | www.youtube.com/codinglabyt -->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title> Responsiive Admin Dashboard | CodingLab </title>
    <link rel="stylesheet" href="~/Content/css/styles.css">    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery 3 -->
    <script src="~/Content/js/jquery.min.js"></script>
</head>
<body>
    <div class="box">
        <div class="box-header ">
            <h3 class="box-title text-center">Change Password </h3>
        </div>

        <div class="box-body">

            <div class="col-md-12 col-xs-12 padding0">
                <div id="tabs" class="custab-design-urs-head">
                    <ul class="nav nav-tabs" id="viewTab">
                        <li class="active">
                            <a href="#main1" data-toggle="tab">CHANGE PASSWORD</a>
                        </li>
                    </ul>
                    <div class="tab-content padding0">
                        <div class="tab-pane padding0 active" id="main1">
                            <div class="col-md-6 ">
                                <div class="form-body">
                                    <div class="form-group m25">
                                        <label for="eventInput5">Current Password <span class="red">*</span></label>
                                        <input type="password" class="form-control" name="password" id="txtcurrent_password" onkeyup="return ClearError(this.id);" autocomplete="section-red fiels11">
                                        <p id="Ptxtcurrent_password" style="color:red"></p>
                                    </div>
                                    <div class="form-group">
                                        <label for="eventInput5">New Password <span class="red">*</span></label>
                                        <input type="password" class="form-control" name="password" id="txtnew_password" onchange="TestOnTextChange();" onkeyup="return ClearError(this.id);">
                                        <p id="Ptxtnew_password" style="color:red"></p>
                                    </div>
                                    <div class="form-group">
                                        <label for="eventInput5">Confirm Password <span class="red">*</span></label>
                                        <input type="password" class="form-control" name="password" id="txtconfirm_password" onchange="TestOnTextChange();" onkeyup="return ClearError(this.id);">
                                        <p id="Ptxtconfirm_password" style="color:red"></p>
                                    </div>
                                    <div class="form-group">

                                        <button type="submit" class="btn btn-primary pull-right" id="btnchangePwd">Submit</button>
                                        <p id="PbtnchangePwd" style="color:red"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<style>
    html, body {
        background-color: aqua;
    }
</style>

<script src="~/Content/js/ApplicationJs/ChangePassword.js?v=0000000000000001"></script>
